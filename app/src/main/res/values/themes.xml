<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeevaSearchBrowser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Material 1 colors.  PrimaryVariant and SecondaryVariant don't exist in MD3, so we
             arbitrarily pick colors that are slightly darker than Primary and Secondary. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondaryVariant">@color/md_theme_light_onSecondaryContainer</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@color/md_theme_light_surface</item>
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>

        <!-- Prevent the bouncer activity from animating a transition to the child activities. -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.NeevaSearchBrowser.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
