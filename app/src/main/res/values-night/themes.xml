<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeevaSearchBrowser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Material 1 colors.  PrimaryVariant and SecondaryVariant don't exist in MD3, so we
             arbitrarily pick colors that are slightly lighter than Primary and Secondary. -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorPrimaryVariant">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondaryVariant">@color/md_theme_dark_onSecondaryContainer</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:statusBarColor">@color/md_theme_dark_surface</item>
        <item name="android:navigationBarColor">@color/md_theme_dark_surface</item>

        <!-- Prevent the bouncer activity from animating a transition to the child activities. -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
